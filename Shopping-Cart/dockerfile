# Use OpenJDK 17 (Temurin is the recommended JDK)
FROM eclipse-temurin:17-jdk AS build

# Set working directory
WORKDIR /app

# Copy everything from Shopping-Cart folder
COPY Shopping-Cart/ ./

# Give execute permission to Maven wrapper (important for Linux)
RUN chmod +x mvnw

# Build the Spring Boot JAR (skip tests)
RUN ./mvnw clean package -DskipTests

# -------------------------------
# Runtime image (smaller and faster)
# -------------------------------
FROM eclipse-temurin:17-jdk

WORKDIR /app

# Copy only the built JAR from the build stage
COPY --from=build /app/target/Shopping-Cart-0.0.1-SNAPSHOT.jar .

# Expose port 8080 (default Spring Boot port)
EXPOSE 8080

# Run the Spring Boot app
CMD ["java", "-jar", "Shopping-Cart-0.0.1-SNAPSHOT.jar"]
